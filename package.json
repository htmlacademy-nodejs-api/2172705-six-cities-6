{
  "name": "six-cities",
  "version": "6.0.0",
  "description": "Проект «Шесть городов» от HTML Academy",
  "keywords": [
    "rest",
    "api",
    "node.js"
  ],
  "main": "main.js",
  "scripts": {
    "start": "npm run build && node ./dist/main.rest.js",
    "start:dev": "npm run ts ./src/main.rest.ts | pino-pretty --colorize --translateTime SYS:standard",
    "build": "npm run clean && npm run compile",
    "lint": "eslint src/ --ext .ts",
    "compile": "tsc --project tsconfig.json",
    "clean": "rimraf dist",
    "ts": "tsx",
    "mock:server": "json-server ./src/cli/mock/server-data.mock.json --watch --port 3001"
  },
  "dependencies": {
    "chalk": "5.3.0",
    "convict": "6.2.4",
    "convict-format-with-validator": "6.2.0",
    "dayjs": "1.11.10",
    "dotenv": "16.4.1",
    "glob": "10.3.10",
    "got": "14.0.0",
    "pino": "8.17.2"
  },
  "devDependencies": {
    "@types/convict": "6.1.6",
    "@types/convict-format-with-validator": "6.0.5",
    "@types/node": "18.17.17",
    "@typescript-eslint/eslint-plugin": "6.7.0",
    "@typescript-eslint/parser": "6.7.0",
    "eslint": "8.49.0",
    "eslint-config-htmlacademy": "9.1.1",
    "json-server": "0.17.3",
    "pino-pretty": "10.3.1",
    "rimraf": "5.0.1",
    "tslib": "2.6.2",
    "tsx": "4.7.0",
    "typescript": "5.2.2"
  },
  "type": "module",
  "engines": {
    "node": "^20.0.0",
    "npm": ">=8"
  }
}
